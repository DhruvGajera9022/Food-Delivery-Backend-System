<%- include("../includes/header.ejs") %> 
<%- include("../includes/sidebar.ejs") %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card card-primary">
                                        <% if(category){ %>
                                            <div class="card-header bg-success">
                                                <h3 class="text-light">Edit Category</h3>
                                            </div>
                                        <% }else{ %>
                                            <div class="card-header bg-primary">
                                                <h3 class="text-light">Add Category</h3>
                                            </div>
                                        <% } %>
                                        
                                        <form action="/add_category" method="post" enctype="multipart/form-data" id="formAddCategory">
                                            <div class="card-body">
                                                <input type="hidden" name="id" value="<%= category ? category.id : '' %>" />

                                                <!-- Category Name -->
                                                <div class="form-group row">
                                                    <label for="name" class="col-sm-2 col-form-label">Category Name 
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Category Name" value="<%= category ? category.name : '' %>" />
                                                    </div>
                                                </div>

                                                <!-- Active -->
                                                <div class="form-group row">
                                                    <label for="active" class="col-sm-2 col-form-label">Status</label>
                                                    <div class="col-sm-10">
                                                        <input type="checkbox" name="active" id="active" <% if(category && category.isActive == 1){ %> checked <% } %>> Active
                                                    </div>
                                                </div>

                                                <!-- Image -->
                                                <div class="form-group row">
                                                    <label for="image" class="col-sm-2 col-form-label">Image</label>
                                                    <div class="col-sm-10">
                                                        <input type="file" name="image" id="image" class="form-control"><br>
                                                        <% if(category && category.image){ %>
                                                            <img src="/img/categoryImages/<%= category.image %>" alt="Category Image" width="70px" height="70px">
                                                            <input type="hidden" name="image_old" value="<%= category.image %>" />
                                                        <% } %>
                                                    </div>
                                                </div>

                                                <!-- Submit Button -->
                                                <div class="card-footer">
                                                    <button type="submit" name="add" class="btn btn-<%= category ? 'success' : 'primary' %>">
                                                        <%= category ? 'Edit' : 'Add' %>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark"></aside>

    <%- include("../includes/footer.ejs") %>
</div>
